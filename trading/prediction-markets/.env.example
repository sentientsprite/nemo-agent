# Polymarket Trading Bot - Environment Configuration
# Copy this file to .env and fill in your credentials

# ============================================
# PLATFORM SETTINGS
# ============================================
PLATFORM=polymarket
DRY_RUN=true

# ============================================
# POLYMARKET CREDENTIALS (Required)
# ============================================
# Private key for your wallet (with 0x prefix)
POLYMARKET_PRIVATE_KEY=0x

# API credentials (optional - will be derived from private key if not provided)
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# Chain ID (137 = Polygon mainnet, 80002 = Amoy testnet)
POLYMARKET_CHAIN_ID=137

# Funder address (for delegated accounts)
POLYMARKET_FUNDER=

# ============================================
# RPC CONFIGURATION (VPN/Proxy Support)
# ============================================
# Custom RPC URL (use for VPN scenarios or rate limiting)
# Default: https://polygon-rpc.com
# Alternative: https://rpc.ankr.com/polygon
# Alternative: https://polygon.llamarpc.com
POLYMARKET_RPC_URL=https://polygon-rpc.com

# Proxy/Delegate contract address for delegated trading
POLYMARKET_PROXY=0x6Ca15Ec1764A7cE16B7ada4eC29934923f756a8a

# ============================================
# RISK MANAGEMENT (SAFETY LIMITS)
# ============================================
# MAX TRADE SIZE: Hard limit of $10 per trade
RISK_MAX_TRADE_SIZE_USD=10.0

# STOP LOSS: -50% (NOT -75%)
RISK_STOP_LOSS_PCT=0.50

# DAILY LOSS LIMITS
RISK_DAILY_LOSS_LIMIT_PCT=0.15
RISK_DAILY_LOSS_LIMIT_USD=50.0

# Portfolio limits
RISK_MAX_PER_MARKET_PCT=0.10
RISK_MAX_TOTAL_EXPOSURE_PCT=0.30
RISK_MIN_LEADER_WINRATE=0.50
RISK_LEADER_WINRATE_WINDOW=20
RISK_MAX_POSITIONS_PER_LEADER=3

# ============================================
# COPY TRADING SETTINGS
# ============================================
COPY_DELAY_SECONDS=5.0
SIZING_RATIO=1.0
POLL_INTERVAL_SECONDS=30
BANKROLL=100.0

# Comma-separated list of leader addresses to follow
POLYMARKET_LEADER_ADDRESSES=

# ============================================
# NETWORK/VPN SETTINGS
# ============================================
VPN_REQUIRED=true
VPN_CHECK_HOST=clob.polymarket.com

# ============================================
# WEBHOOK SETTINGS
# ============================================
WEBHOOK_PORT=5088
WEBHOOK_SECRET=

# ============================================
# DATA STORAGE
# ============================================
DATA_DIR=data
TRADES_FILE=data/trades.jsonl
